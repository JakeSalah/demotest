# Authentication Methods (use one of the following)

# 1. Base64 encoded service account JSON (recommended for production)
# CREDENTIALS_CONFIG=<base64-encoded-service-account-json>

# 2. Service account file path
# SERVICE_ACCOUNT_PATH=path/to/service-account.json

# 3. OAuth 2.0 credentials (for development)
# GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-client-secret

# Paths for OAuth flow
TOKEN_PATH=./token.json
CREDENTIALS_PATH=./credentials.json

# Server settings
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO
